	<root level="INFO">
		<appender-ref ref="FILE" />
	</root>
	<!-- 测试环境+开发环境. 多个使用逗号隔开. -->
	<springProfile name="test,dev">
		<root level="INFO">
			<appender-ref ref="FILE" />
		</root>
	</springProfile>

	<!-- 生产环境. -->
	<springProfile name="prod">
		<root level="ERROR">
			<appender-ref ref="FILE" />
		</root>
	</springProfile>
</configuration>
